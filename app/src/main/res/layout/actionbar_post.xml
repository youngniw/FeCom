<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fecom">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/post_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/main_fecom"
        android:contentDescription="@string/cancel"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_back"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/post_refresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toStartOf="@id/post_ll"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/main_fecom"
        android:contentDescription="@string/refresh"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_refresh"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/post_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/post_menu"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/main_fecom"
            android:contentDescription="@string/refresh"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_menu"
            app:tint="@color/white" />
    </LinearLayout>

</RelativeLayout>
